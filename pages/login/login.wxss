.login_main{
  margin-top: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.login_main .login_title{
  font-size: 36rpx;
}
.login_main .login_prompt{
  font-size: 26rpx;
  color: #666;
  margin: 40rpx 0;
}
.login_main .login_select_wrap{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.login_main .login_select_wrap .login_cancle button{
  background-color: #95afc0;
  color: #fff;
  width: 300rpx;
  margin: 20rpx;
}
.login_main .login_select_wrap .login_confirm button{
  background-color: #eb4d4b;
  color: #fff;
  width: 300rpx;
  margin: 20rpx;
}