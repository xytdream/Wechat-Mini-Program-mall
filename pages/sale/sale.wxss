/* 商品图片样式 */
.good_pics{
  padding: 20rpx;
  border-bottom: 5px solid #dfe4ea;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 未选择图片前的样式 */
.good_pics .addPics{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.good_pics .addPics .iconfont{
  font-size: 80rpx;
  font-weight: normal;
}
.good_pics .addPics .addPics_title{
  font-size: 20rpx;
}
/* 选择图片后的样式 */
.good_pics .showPics{
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  align-items: flex-start;
}
.good_pics .showPics .pics_wrap{
  width: 120rpx;
  height: 120rpx;
  margin: 10rpx;
  border: 1px solid black;
  box-sizing: border-box;
  position: relative;
}
.good_pics .showPics .pics_wrap image{
  width: 100%;
  height: 100%;
}
.good_pics .showPics .pics_wrap .iconfont{
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  font-size: 30rpx;
}
.good_pics .showPics .iconfont{
  font-size: 120rpx;
}



/* 商品标题样式 */
.good_title{
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #f1f2f6;
  display: flex;
  justify-content: center;
  align-items: center;
}
.good_title .txt_title{
  flex: 10;
  padding: 20rpx;
}
.good_title .length_title{
  flex: 1;
  font-size: 20rpx;
}

/* 商品文字描述样式 */
.good_intro{
  width: 100%;
  border-bottom: 1px solid #f1f2f6;
  padding: 20rpx;
}
.good_intro textarea{
  width: 90%;
}

/* 商品价格样式 */
.good_price{
  padding: 20rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  border-bottom: 1px solid #f1f2f6;
}
.good_price input{
  font-size: 26rpx;
  padding-left: 10rpx;
  width: 80%;
}

/* 商品成色样式 */
.good_condition{
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.good_condition .condition_title{
  flex: 1;
  padding-top: 10rpx;
}
.good_condition .condition_type{
  flex: 5;
  display: flex;
  flex-wrap: wrap;
}
.good_condition .condition_type radio{
  width: 30%;
  padding: 10rpx;
  font-size: 20rpx;
}






























.good_sale{
  margin: 50rpx;
}
