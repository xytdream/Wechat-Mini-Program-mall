.first_tab .good_item{
  display: flex;
  height: 250rpx;
  border-bottom: 1px solid #ccc;
}
.first_tab .good_item .good_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .good_item .good_img_wrap image{
  width: 50%;
}
.first_tab .good_item .good_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .good_item .good_info_wrap .good_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.first_tab .good_item .good_info_wrap .good_price{
  color: red;
  font-size: 30rpx;
}