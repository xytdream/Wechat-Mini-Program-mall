.orders_wrap{
  margin-top: 15rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.orders_wrap .orders_title{
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
}
.orders_wrap .orders_title .orders_all{
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}
.orders_wrap .orders_content{
  display: flex;

}
.orders_wrap .orders_content navigator{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}
.orders_wrap .orders_content navigator text{
  color: #e74c3c;
  font-size: 40rpx;
  margin-bottom: 5rpx;
}
.orders_wrap .orders_content navigator .icondaifukuan{
  font-size: 32rpx;
  padding: 4rpx 0;
}
.orders_wrap .orders_content navigator .content_title{
  font-size: 26rpx;
}

.address_wrap,.app_share_wrap,.app_exit{
  background-color: #fff;
  margin-top: 15rpx;
  padding: 20rpx;
}
.app_share_wrap{
  position: relative;
}
.app_share_wrap button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.app_info_wrap{
  background-color: #fff;
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
}
.app_info_wrap .app_info_item{
  flex: 1;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.app_info_contact{
  display: flex;
  justify-content: space-between;
}
