.user_info_wrap{
  height: 45vh;
  background-color: #eb4d4b;
  position: relative;
}
.user_img_wrap{
  height: 100%;
  overflow: hidden;
  position: relative;
}
.user_img_wrap .user_bg{
  width: 100%;
  /* 高斯模糊 */
  filter: blur(15rpx);
}
.user_img_wrap .user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_img_wrap .user_info image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.user_img_wrap .user_info .user_name{
  color: #fff;
  margin-top: 50rpx;
}

.login_btn{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 120rpx;
  height: 40rpx;
  border: 1rpx solid #fff;
  color: #fff;
  font-weight: bold;
  text-align: center;
  padding: 10rpx;
}

.user_content{
  position: relative;
}
.user_content .user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 30rpx;
}
