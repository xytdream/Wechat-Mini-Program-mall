/* 商品价格栏样式 */
.good_price_row{
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 10px solid #dfe4ea;
}
.good_price_row .good_price{
  padding-left:10rpx; 
  color: red;
  font-size: 40rpx;
}
.good_price_row .good_condition{
  margin-left: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  background: #ff9f1a;
  padding: 5rpx;
  border: 1px solid #ff9f1a;
}

/* 图文详情样式 */
.good_detail{
  width: 100vw;
  padding: 20rpx;
}
.good_detail .good_detail_title{
  color: red;
  /* font-weight: bold; */
  margin: 20rpx 0;
  padding-left: 5rpx;
  border-left: 5px solid #ff4d4d;
  /* border-bottom: 1rpx solid #dedede; */
}
.good_detail .good_introText{
  padding:0 20rpx 20rpx 0;
}
.good_detail .good_detail_img{
  width: calc(100% - 40rpx);
}
.good_detail .good_detail_img image{
  width: 100%;
}

/*底部工具栏样式*/
.bottom_tool{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1px solid #ccc;
}
.bottom_tool .tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.bottom_tool .tool_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom_tool .tool_item text{
  font-size: 40rpx;
}
.bottom_tool .tool_item view{
  font-size: 24rpx;
  margin-top: 4rpx;
}
.bottom_tool .btn_addCart{
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-weight: bold;
}
.bottom_tool .btn_buy{
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-weight: bold;
}
