}
swiper swiper-item image{
  width: 60%;
}

.goods_price{
  color: red;
  font-size: 30rpx;
  font-weight: bold;
  padding: 10rpx 0;
}
.goods_title_row{
  display: flex;
  border-bottom: 5rpx solid #dedede;
  padding: 15rpx 0;
}
.goods_title_row .goods_title{
  flex: 1;
  padding-left: 5rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
