/* 发布者样式 */
.good_owner_wrap{
  height: 100rpx;
  /* border-bottom: 1px solid #dedede; */
  display: flex;
  align-items: center;
  justify-content: start;
}
.good_owner{
  height: 50rpx;
  padding: 10rpx 50rpx 10rpx 10rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  background: #a4b0be;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  overflow: hidden;
}
.good_owner image{
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
}
.good_owner .nickName{
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #fff;
}
